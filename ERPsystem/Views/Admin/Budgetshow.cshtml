@model IEnumerable<ERPsystem.budget>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Budget List</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            padding: 20px;
            background-color: #f7f7f7;
        }

        .table-hover tbody tr:hover {
            background-color: #ffffcc;
        }

        .table thead {
            background-color: #ffc107;
            color: #fff;
        }

        .action-icons i {
            font-size: 1.2rem;
            margin: 0 8px;
        }

        .action-icons a:hover i {
            color: #0d6efd;
        }

        .card {
            border-radius: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Budget Records</h4>
                <a href="@Url.Action("Budgetadd", "Admin")" class="btn btn-light">+ Create New</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered text-center align-middle">
                        <thead>
                            <tr>
                                <th>Fiscal Year</th>
                                <th>Allocated</th>
                                <th>Spent</th>
                                <th>Remaining</th>
                                <th>Account Name</th>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.fiscal_year</td>
                                    <td>@item.allocated</td>
                                    <td>@item.spent</td>
                                    <td>@item.remaining</td>
                                    <td>@item.account.name</td>
                                    <td class="action-icons">
                                        <a href="@Url.Action("editbudget", "Admin", new { id = item.budget_id })" title="Edit">
                                            <i class="bi bi-pencil-square text-primary"></i>
                                        </a>
                                        <a href="@Url.Action("Details", "Admin", new { id = item.budget_id })" title="Details">
                                            <i class="bi bi-eye-fill text-success"></i>
                                        </a>
                                        <a href="@Url.Action("deletebudget", "Admin", new { id = item.budget_id })" title="Delete" onclick="return confirm('Are you sure you want to delete this budget?');">
                                            <i class="bi bi-trash3-fill text-danger"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

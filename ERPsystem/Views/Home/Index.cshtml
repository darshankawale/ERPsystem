@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ERP System Home</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .hero-image {
            width: 95%;
            height: 100vh;
            object-fit: cover;
            margin-left:35px;
            margin-right:20px;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            background: linear-gradient(to right, orange, violet) !important;
            -webkit-background-clip: text !important;
            -webkit-text-fill-color: transparent !important;
        }

        .footer {
            background-color: black;
            color:white;
            padding: 20px 0;
            text-align: center;
            margin-top: 0px;
            box-shadow: 0 -2px 5px rgba(0,0,0,0.1);
        }
        .nav-link {
            color:white;
        }
        .nav-link:hover {
            color: white !important;
        }
    </style>
</head>
<body style="background-color:black;">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="#">ERP System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#erpNavbar" aria-controls="erpNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="erpNavbar">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/About">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#"> Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contact Us</a>
                        </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Full-width Image Banner -->
    <div class="container-fluid px-0">
        <img src="~/assets/images/ERP_project.jpg" alt="ERP Banner" class="img-fluid hero-image" />

    </div>
        <!-- Footer -->
        <div class="footer">
            <p class="mb-0" >&copy; @DateTime.Now.Year ERP System. All Rights Reserved.</p>
        </div>
  

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
